# Application Settings
VERSION=1.0.0
DEBUG=true
HOST=0.0.0.0
PORT=8000

# CORS (JSON array format required by pydantic-settings)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60
JWT_REFRESH_EXPIRATION_DAYS=7

# Redis (Rate Limiting & Caching)
# Note: If port 6379 is in use, change to 6380 or another available port
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# gRPC Service Endpoints
VOICE_STT_GRPC_URL=localhost:50051
VOICE_TTS_GRPC_URL=localhost:50052
INTENT_GRPC_URL=localhost:50053
PLANNER_GRPC_URL=localhost:50054
SAFETY_GRPC_URL=localhost:50055
BROWSER_GRPC_URL=localhost:50056
OS_GRPC_URL=localhost:50057
SEARCH_GRPC_URL=localhost:50058
MEMORY_GRPC_URL=localhost:50059

# gRPC Client Settings
GRPC_MAX_RETRIES=3
GRPC_TIMEOUT_SECONDS=30
GRPC_KEEPALIVE_TIME_MS=10000
GRPC_KEEPALIVE_TIMEOUT_MS=5000

# Service Timeouts (seconds)
STT_TIMEOUT=30
TTS_TIMEOUT=30
INTENT_TIMEOUT=10
PLANNER_TIMEOUT=15
SAFETY_TIMEOUT=5
EXECUTOR_TIMEOUT=60
MEMORY_TIMEOUT=10

# Logging
LOG_LEVEL=INFO
LOG_JSON=true

# Prometheus Metrics
METRICS_ENABLED=true

# WebSocket
WS_MAX_CONNECTIONS=1000
WS_HEARTBEAT_INTERVAL=30
