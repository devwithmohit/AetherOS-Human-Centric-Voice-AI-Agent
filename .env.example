# ============================================
# AetherOS Environment Configuration
# ============================================
# Copy this file to .env and configure values

# ============================================
# General Settings
# ============================================
NODE_ENV=development
LOG_LEVEL=info

# ============================================
# Frontend (Desktop Client)
# ============================================
CORS_ORIGIN=http://localhost:3000
VITE_API_GATEWAY_URL=http://localhost:8000

# ============================================
# Speech-to-Text (M2)
# ============================================
# Whisper model sizes: tiny, base, small, medium, large
WHISPER_MODEL=base
# Device: cpu, cuda (for GPU)
DEVICE=cpu

# ============================================
# Text-to-Speech (M3)
# ============================================
# Piper voice options: en_US-lessac-medium, en_US-amy-medium, en_GB-alan-medium, etc.
PIPER_VOICE=en_US-lessac-medium

# ============================================
# LLM Service (M4)
# ============================================
# LLM Mode: local, cloud, hybrid
LLM_MODE=local

# Local LLM (Ollama)
OLLAMA_URL=http://host.docker.internal:11434
DEFAULT_MODEL=llama3.2:3b

# Cloud LLM API Keys (Optional - for cloud/hybrid mode)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# ============================================
# Function Executor (M7)
# ============================================
# Timeout for function execution (milliseconds)
EXECUTION_TIMEOUT=30000

# ============================================
# Context Manager (M8)
# ============================================
# Number of previous messages to include in context
CONTEXT_WINDOW_SIZE=10

# ============================================
# Memory Service (M10)
# ============================================
# Data retention period (days)
DATA_RETENTION_DAYS=30

# ============================================
# API Gateway (M11)
# ============================================
# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# JWT Secret (for authentication if needed)
JWT_SECRET=your-secret-key-here-change-in-production

# ============================================
# Desktop Client (M12)
# ============================================
# Wake word
WAKE_WORD=hey jarvis

# Recording hotkey
RECORDING_HOTKEY=CommandOrControl+`

# Theme
THEME=dark

# ============================================
# Development Settings
# ============================================
# Enable hot reload
HOT_RELOAD=true

# Enable debug logging
DEBUG=aether:*

# ============================================
# Production Settings (Uncomment for production)
# ============================================
# NODE_ENV=production
# LOG_LEVEL=warn
# HOT_RELOAD=false
# DEBUG=

# ============================================
# Database (Future - if needed)
# ============================================
# DATABASE_URL=postgresql://user:password@localhost:5432/aether
# REDIS_URL=redis://localhost:6379

# ============================================
# Monitoring (Future - if needed)
# ============================================
# SENTRY_DSN=
# PROMETHEUS_PORT=9090
