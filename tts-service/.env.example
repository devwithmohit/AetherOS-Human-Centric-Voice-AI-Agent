# Service Configuration
SERVICE_NAME=tts-service
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8002
ENVIRONMENT=development
LOG_LEVEL=INFO

# TTS Model Configuration
TTS_MODEL_NAME=tts_models/en/ljspeech/tacotron2-DDC
# Alternative models:
# - tts_models/en/ljspeech/tacotron2-DDC (Fast, good quality)
# - tts_models/en/vctk/vits (Multi-speaker)
# - tts_models/en/ljspeech/glow-tts (Very fast)
# - tts_models/multilingual/multi-dataset/xtts_v2 (Best quality, slow)

# Model paths
TTS_MODEL_PATH=./models/
TTS_CONFIG_PATH=./models/config.json

# Audio Configuration
AUDIO_SAMPLE_RATE=22050
AUDIO_CHANNELS=1
AUDIO_BIT_DEPTH=16
AUDIO_FORMAT=wav

# Voice Configuration
DEFAULT_SPEAKER=ljspeech
DEFAULT_LANGUAGE=en

# Performance Settings
USE_CUDA=true
ENABLE_HALF_PRECISION=false  # FP16 for faster inference (requires GPU)
NUM_THREADS=4

# Cache Configuration
CACHE_ENABLED=true
CACHE_DIR=./cache/
CACHE_SIZE_MB=500
CACHE_TTL_SECONDS=86400  # 24 hours
CACHE_MAX_ENTRIES=1000

# Quality Settings
TARGET_MOS_SCORE=3.5  # Mean Opinion Score target
MAX_TEXT_LENGTH=500   # Maximum characters per request
MIN_TEXT_LENGTH=1

# Streaming Configuration
STREAM_CHUNK_SIZE=4096
ENABLE_STREAMING=true

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_CONCURRENT_REQUESTS=10

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
