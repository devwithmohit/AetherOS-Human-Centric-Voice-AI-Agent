# Memory Service Configuration

# Service
SERVICE_NAME=memory-service
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8001
ENVIRONMENT=development
LOG_LEVEL=INFO

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=aetheros_memory
POSTGRES_USER=aetheros
POSTGRES_PASSWORD=change_me_in_production
DATABASE_URL=postgresql+asyncpg://aetheros:change_me_in_production@localhost:5432/aetheros_memory

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# ChromaDB
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_PERSIST_DIR=./chroma_data

# Security
ENCRYPTION_KEY=generate_with_fernet_generate_key
SECRET_KEY=generate_random_secret_key_here
ALGORITHM=HS256

# Memory retention policies (seconds)
SHORT_TERM_TTL=3600           # 1 hour
WORKING_MEMORY_TTL=86400      # 24 hours
EPISODIC_RETENTION_DAYS=90    # 90 days

# Performance
MAX_CONNECTIONS=100
POOL_SIZE=20
MAX_OVERFLOW=10

# Privacy
ENABLE_ENCRYPTION=true
REQUIRE_CONSENT=true
ANONYMIZE_PII=true
